@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Industries";
}
<h2>@Mui.Industries</h2>
<fieldset>
    <legend>@Mui.Search</legend>
    <input type="text" id="search" />
    <button type="button" id="sb" class="awe-btn ibtn">@Mui.Search</button>
</fieldset>
<br />
<button class="awe-btn" onclick="@(Url.Awe().PopupFormAction().Url(Url.Action("create")).Success("refreshIndustryGrid").Height(300))">@Mui.Create</button>
@Html.Awe().Form().FormClass("LeadRestore").Success("refreshIndustryGrid").Url(Url.Action("Restore"))
@Html.Awe().Form().Confirm(true).FormClass("BranchConfirm").Success("refreshIndustryGrid").Url(Url.Action("Delete"))
@(Html.Awe().Grid("IndustryGrid")
      .Url(Url.Action("GetItems", "IndustryGrid"))
      .Parent("search")
      .Persistence(Persistence.Session)
      .Columns(
          new Column { Name = "Description", PercentWidth = 70},         
          new Column { ClientFormat = ".Actions", Width = 80 }))
