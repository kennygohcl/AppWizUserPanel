@model Product
@{
    ViewBag.Title = "Picture";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    @Mui.Picture @Model.Name</h2>

 <img  src='@Url.Content("~/pictures/Products/"+Model.Picture)'  alt='picture' />
@using (Html.BeginForm("ochangepicture", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{     
    <input type="hidden" id="id" name="id" value="@Model.Id" />
    <input type="file" id="fileUpload" name="fileUpload" />
    <input type="submit" value="@Mui.upload_file" />   
}
