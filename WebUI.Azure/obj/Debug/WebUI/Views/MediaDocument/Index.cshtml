@{
    Layout = "~/Views/Shared/_LayoutMyProfile.cshtml";
    ViewBag.Title = "Media Documents";
}
<br/>

@section previewLeftSidebarSection {
    @Html.Partial("SideBar/SideBarMyProfile")
}

<div style=" width: 90%;">

    <h2>Media Documents</h2>
 <fieldset>
        <legend>@Mui.Search</legend>
        <input type="text" id="search" />
        <button type="button" id="sb" class="awe-btn ibtn">@Mui.Search</button>
    </fieldset>
    <br />
  <button class="awe-btn" onclick="@(Url.Awe().PopupFormAction().Url(Url.Action("create")).Success("refreshMediaDocumentGrid").Height(300))">@Mui.Create</button>
     @Html.Awe().Form().FormClass("BranchRestore").Success("refreshMediaDocumentGrid").Url(Url.Action("Restore"))
    @Html.Awe().Form().Confirm(true).FormClass("BranchConfirm").Success("refreshMediaDocumentGrid").Url(Url.Action("Delete"))
    @(Html.Awe().Grid("MediaDocumentGrid")
          .Url(Url.Action("GetItems", "MediaDocumentGrid"))
          .Parent("search")
          .Width(800)
          .Persistence(Persistence.Session)
          .Columns(
              new Column { Name = "DocName", PercentWidth = 30},
              new Column { Name = "MediaType" },
              new Column { Name = "Module" },
              new Column { Name = "DateCreated" },
              new Column { ClientFormat = ".Actions", Width = 80 }))
</div>