<fieldset><legend>@Mui.Search</legend>
    @Html.Awe().TextBox("Search").Placeholder(Mui.Search).Prefix("prod")
  </fieldset>
<br />
<button class="awe-btn" onclick="@(Url.Awe().PopupFormAction().Url(Url.Action("create")).Success("createProduct").Height(650).Width(650))">@Mui.Create @Mui.Product</button>

<div id="tabsProduct" style="width: 95%; height: 600px; ">     

    <ul>
        @foreach (var category in ViewBag.Categories)
        { 
            <li><a href="#tabsProductId@(category.Description)">@category.Description</a></li>
        }
    </ul>
    
    <div>
      @foreach (var category in ViewBag.Categories)
      { 
          <div id="tabsProductId@(category.Description)" style="width: 95%; height: 520px; overflow-y: auto; max-width:650px; max-height:520px; ">
              @{
          ViewBag.CategoryId = category.Id.ToString();
              }
            @{Html.RenderPartial("ProductListPerCategory");}
 
          </div>
      }
    </div>
</div>

<script type="text/javascript">
    

    jQuery(document).ready(function () {
        jQuery( "#tabsProduct" ).tabs();
    });

</script>


