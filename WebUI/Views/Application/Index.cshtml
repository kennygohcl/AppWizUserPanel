                        item += "<a class='aRemove' href='javascript:deleteMedia(\"" + obj[c].V + "\",\"" + obj[c].T + "\")' style='display:block;'>" + "[remove]" + "</a>";
                    } else {
                        item += "<a class='aItem' href='javascript:bindMedia(\"IMAGE\",\"" + "0" + "\",\"\",\"" + "(Empty)" + "\")' style='display:block;'>" + "(Empty)" + "</a>";
                    }
                    item += "<div style='clear:both'></div>";
                    item += "</div>";

