    function deleteMedia(id,name) {

        var json = {
            "id": id

        };

        $.ajax({
            type: "POST",
            url: "/Application/RemoveFilesMainAppLogoOrVideo",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify(json),
            dataType: "json",
            cache: false,
            success: function (results) {
                $("#divItem" + id).hide("slow", function () {
                    $("#divItem" + id).remove();
                });

                if ($("#txtMedia").val() == name) {
                    $("#txtMedia").val("");
                }

                if ($("#AppLogoId").val() == id) {
                    $("#AppLogoId").val("0");
                }

                if ($("#AppVideoId").val() == id) {
                    $("#AppVideoId").val("0");
                }
            },
            beforeSend: function () {
                $("#divItem" + id + " > .aRemove").html("<img src='../content/ajax-loader.gif' />");
            }

            //error: savePublishItemFailed
        });


    }

    function bindMedia(mediaType,logoId,videoId,name){
        if (mediaType == "IMAGE") {
            $("#AppVideoId").val("");
            $("#AppLogoId").val(logoId);
            //$('input[name="AppStartUpMediaType"][value="Video"]').each(function () { $(this).removeAttr("checked") });
            $('input[name="AppStartUpMediaType"][value="Image"]').prop({ "checked": "checked" });
        } else {
            $("#AppVideoId").val(videoId);
            $("#AppLogoId").val("");
            //$('input[name="AppStartUpMediaType"][value="Image"]').each(function () { $(this).removeAttr("checked") });
            $('input[name="AppStartUpMediaType"][value="Video"]').prop({ "checked": "checked" });
            
        }

        $("#txtMedia").val(name);
        $("#divMediaLib").dialog("close");
    }

