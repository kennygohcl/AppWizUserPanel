<script type="text/javascript">
    var selectedViewValue = 0;
    jQuery(document).ready(function() {
        selectedViewValue = @ViewBag.SelectedView
        
        jQuery("#viewProductDetailDiv").hide();
        jQuery("#viewShoppingCartDiv").hide();
        hideAllViews();
        showViews(); 
    });

    jQuery("#viewLeftArrow").click(function () {
        selectedViewValue -= 1;
        
        if (selectedViewValue<=0) {
            selectedViewValue = 0;
        }

        showViews();
    });
    
    jQuery("#nextArrow").click(function () {
        selectedViewValue += 1;
        if (selectedViewValue >= 7) {
            selectedViewValue = 7;
        }

        showViews();
    });
    
    
    $("#btnCancel").click(function () {
        $("#pAppName").text("");
        $("#pEmail").text("");
    });
  
    $("#btnSaveAndPublish").click(function () {
      
    });

    function showViews() {
        if (selectedViewValue == 0) {
            hideAllViews();
            jQuery("#viewIndexDiv").show();
            jQuery("#viewUserSplashScreenDiv").show();
            jQuery("#viewUserProfileDiv").show();
            jQuery("#viewRetailerIntroDiv").show();
            jQuery("#viewPushNotificationDiv").show();
        }
        else if (selectedViewValue == 1) {
            hideAllViews();
            jQuery("#viewUserSplashScreenDiv").show();
            jQuery("#viewUserProfileDiv").show();
            jQuery("#viewRetailerIntroDiv").show();
            jQuery("#viewPushNotificationDiv").show();
            jQuery("#viewEshopDiv").show();
        }
        else if (selectedViewValue == 2) {
            hideAllViews();
            jQuery("#viewUserProfileDiv").show();
            jQuery("#viewRetailerIntroDiv").show();
            jQuery("#viewPushNotificationDiv").show();
            jQuery("#viewEshopDiv").show();
            jQuery("#viewProductDetailDiv").show();
        }
        else if (selectedViewValue == 3) {
            hideAllViews();
            jQuery("#viewRetailerIntroDiv").show();
            jQuery("#viewPushNotificationDiv").show();
            jQuery("#viewEshopDiv").show();
            jQuery("#viewProductDetailDiv").show();
            jQuery("#viewPaymentDiv").show();
        }
        else if (selectedViewValue == 4) {
            hideAllViews();
            jQuery("#viewPushNotificationDiv").show();
            jQuery("#viewEshopDiv").show();
            jQuery("#viewProductDetailDiv").show();
            jQuery("#viewPaymentDiv").show();
            jQuery("#viewTermsandConditionsDiv").show();
        }
        else if (selectedViewValue == 5) {
            hideAllViews();
            jQuery("#viewEshopDiv").show();
            jQuery("#viewProductDetailDiv").show();
            jQuery("#viewPaymentDiv").show();
            jQuery("#viewTermsandConditionsDiv").show();
            jQuery("#viewLoyaltyDiv").show();
        }
        else if (selectedViewValue >= 6) {
            hideAllViews();
            jQuery("#viewProductDetailDiv").show();
            jQuery("#viewPaymentDiv").show();
            jQuery("#viewTermsandConditionsDiv").show();
            jQuery("#viewLoyaltyDiv").show();
            jQuery("#viewFeedbackDiv").show();
        }
        
      
    }
    
    function hideAllViews() {
        jQuery("#viewIndexDiv").hide();
        jQuery("#viewUserProfileDiv").hide();
        jQuery("#viewRetailerIntroDiv").hide();
        jQuery("#viewPushNotificationDiv").hide();
        jQuery("#viewEshopDiv").hide();
        jQuery("#viewProductDetailDiv").hide();
        jQuery("#viewPaymentDiv").hide();
        jQuery("#viewLoyaltyDiv").hide();
        jQuery("#viewTermsandConditionsDiv").hide();
        jQuery("#viewFeedbackDiv").hide();
        jQuery("#viewUserSplashScreenDiv").hide();
        
    }
   

</script>
